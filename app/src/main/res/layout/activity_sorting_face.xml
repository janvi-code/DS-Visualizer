<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    tools:context=".sortingFace">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/dash1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="100dp"
            app:cardElevation="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="65dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="10dp"
            >
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Bubble\n\tSORT"
    android:textColor="@android:color/black"
    android:textSize="22dp"
    android:textStyle="bold"
    android:layout_marginLeft="35dp"
    android:layout_marginTop="50dp"
    />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/dash2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="100dp"
            app:cardElevation="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="65dp"
            app:layout_constraintLeft_toLeftOf="@id/dash1"
            android:layout_marginLeft="190dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Insertion\n\tSORT"
                android:textColor="@android:color/black"
                android:textSize="22dp"
                android:textStyle="bold"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="50dp"
                />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/dash3"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="100dp"
            app:cardElevation="20dp"
            app:layout_constraintTop_toTopOf="@id/dash1"
            android:layout_marginTop="180dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selection\n\tSORT"
                android:textColor="@android:color/black"
                android:textSize="22dp"
                android:textStyle="bold"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="50dp"
                />

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/dash4"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="100dp"
            app:cardElevation="20dp"
            app:layout_constraintTop_toTopOf="@id/dash2"
            android:layout_marginTop="180dp"
            app:layout_constraintLeft_toLeftOf="@id/dash3"
            android:layout_marginLeft="190dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quick\n\tSORT"
                android:textColor="@android:color/black"
                android:textSize="22dp"
                android:textStyle="bold"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="50dp"
                />

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/dash5"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="100dp"
            app:cardElevation="20dp"
            app:layout_constraintTop_toTopOf="@id/dash3"
            android:layout_marginTop="175dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="105dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Merge\n\tSORT"
                android:textColor="@android:color/black"
                android:textSize="22dp"
                android:textStyle="bold"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="50dp"
                />

        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="@id/dash5"
            android:layout_marginTop="120dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>