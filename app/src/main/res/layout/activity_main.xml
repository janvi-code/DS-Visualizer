<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@android:color/darker_gray"

    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<ImageView
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:src="@drawable/ic_wavee"
    android:scaleType="centerCrop"
    android:id="@+id/image1"
    />

 <TextView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:text="DASHBOARD"
     android:textColor="@android:color/white"
     android:textSize="30sp"
     android:textStyle="bold"
     app:layout_constraintLeft_toLeftOf="parent"
     app:layout_constraintTop_toTopOf="parent"
     android:layout_marginTop="30dp"
     android:layout_marginLeft="30dp"
     />

<androidx.cardview.widget.CardView
    android:id="@+id/card1"
    android:layout_width="320dp"
    android:layout_height="150dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardElevation="20dp"
    app:layout_constraintTop_toTopOf="@id/image1"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginTop="140dp"
    app:cardCornerRadius="20dp"
    >

    <ImageView
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:src="@drawable/sort"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="SORTING\nALGORITHMS"
    android:textSize="25sp"
    android:textColor="@android:color/black"
    android:textStyle="bold"
    android:layout_marginTop="35dp"
    android:layout_marginLeft="140dp"
    />


</androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card2"
            android:layout_width="320dp"
            android:layout_height="150dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardElevation="20dp"
            app:layout_constraintTop_toTopOf="@id/card1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="190dp"
            app:cardCornerRadius="20dp"
            >

            <ImageView
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:src="@drawable/set"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="30dp"
                android:scaleType="fitXY"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SET\nALGORITHMS"
                android:textSize="25sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="140dp"
                />


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
        android:id="@+id/card3"
        android:layout_width="320dp"
        android:layout_height="150dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardElevation="20dp"
        app:layout_constraintTop_toTopOf="@id/card2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="190dp"
        app:cardCornerRadius="20dp"
        >
        <ImageView
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:src="@drawable/hash"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="30dp"
            android:scaleType="fitXY"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HASHMAP\nALGORITHMS"
            android:textSize="25sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="140dp"
            />

    </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card4"
            android:layout_width="320dp"
            android:layout_height="150dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardElevation="20dp"
            app:layout_constraintTop_toTopOf="@id/card3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="190dp"
            app:cardCornerRadius="20dp"
            >
            <ImageView
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:src="@drawable/tree"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TREE\nALGORITHMS"
                android:textSize="25sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="140dp"
                />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:layout_constraintTop_toBottomOf="@id/card4"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>